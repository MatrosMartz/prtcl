{
	"tasks": {
		"fmt:all": "deno fmt && deno task lint:md --fix && deno lint --fix",
		"lint:md": "deno run --allow-read --allow-sys --allow-env npm:markdownlint-cli2@0.13.0 **/*.md",
		"fmt:check": "deno fmt --check && deno task lint:md && deno lint"
	},
	"workspace": ["./packages/prtcl", "./packages/copy"],
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"semiColons": false,
		"indentWidth": 2,
		"singleQuote": true
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.1",
		"@std/testing": "jsr:@std/testing@^0.225.3"
	}
}
